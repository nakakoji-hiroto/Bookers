<h1>Editing Book</h1>

<%= form_with model: @book, class: "edit_form" do |f| %>
  <div class="title">
    <label for="title_field">Title</label>
    <%= f.text_field :title, class: "title_field" %>
  </div>
  
  <div class="body">
    <label for="body_field">Body</label>
    <%= f.text_area :body, class: "body_field" %>
  </div>
  
  <div class="submit">
    <%= f.submit 'Update Book', class: "update_book" %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %><span> | </span>
<%= link_to 'Back', books_path %>
