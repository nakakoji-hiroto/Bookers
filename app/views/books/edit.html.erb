<h1>Editing Book</h1>

<% if @book.errors.any? %>

  <h4 class="error_title">
    <%= @book.errors.count %> errors prohibited this book from being saved:
  </h4>
  
    <ul class="error_message">
      <% @book.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  
<% end %>

<%= form_with model: @book, class: "edit_form" do |f| %>
  <div class="title">
    <label for="title_field">Title</label>
    <%= f.text_field :title, class: "title_field" %>
  </div>
  
  <div class="body">
    <label for="body_field">Body</label>
    <%= f.text_area :body, class: "body_field" %>
  </div>
  
  <div class="submit">
    <%= f.submit 'Update Book', class: "update_book" %>
  </div>
<% end %>

<%= link_to 'Show', book_path(@book.id) %><span> | </span>
<%= link_to 'Back', books_path %>
